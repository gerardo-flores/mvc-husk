@model MVC_Husk.Model.SeasonalProductViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>SeasonalProduct</legend>

        @Html.Hidden("id", @Model.Product.ID as object)

        <div class="editor-label">
            Week
        </div>
        <div class="editor-field">
            @Html.TextBox("Week", @Model.Product.Week as object)
        </div>

        <div class="editor-label">
            Category
        </div>
        <div class="editor-field">
             @Html.TextBox("Category", @Model.Product.Category as object)
        </div>

        <div class="editor-label">
            Seasonality Index
        </div>
        <div class="editor-field">
            @Html.TextBox("SeasonalityIndex", @Model.Product.SeasonalityIndex as object)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
